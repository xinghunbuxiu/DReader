<?xml version="1.0" encoding="utf-8"?>
<com.mipay.common.component.CommonGridViewItem android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/Mibi.Widget.GridItem"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="right"
        android:background="@drawable/mibi_grid_view_item_divide_line"
        android:layout_width="@dimen/mibi_divider"
        android:layout_height="fill_parent" />

    <ImageView
        android:layout_gravity="bottom"
        android:background="@drawable/mibi_grid_view_item_divide_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mibi_divider" />

    <ImageView
        android:layout_gravity="center"
        android:id="@id/disable"
        android:background="@drawable/mibi_grid_view_item_disable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.mipay.common.component.CommonGridViewItem>